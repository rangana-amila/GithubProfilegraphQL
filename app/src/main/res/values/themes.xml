<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubProfileGraphQL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewStyleTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewLogin">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_login</item>
    </style>

    <style name="TextViewEmail">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_login</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewFollowersCount">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_login</item>
    </style>

    <style name="TextViewFollowersText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_login</item>
    </style>

    <style name="TextViewListTitles">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_list_titles</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewViewAll">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_login</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>